# ============================================================
# ExitOps - config.env
# Copy this file, fill in your values, and NEVER commit it.
# ============================================================

# --- GitHub ---
GITHUB_TOKEN=your_github_pat_here
GITHUB_ORG=your_org_or_username
TARGET_GITHUB_USER=username_to_offboard

# --- AWS General ---
AWS_ACCESS_KEY_ID=your_admin_access_key
AWS_SECRET_ACCESS_KEY=your_admin_secret_key
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCOUNT_ID=your_12_digit_account_id

# --- AWS IAM ---
IAM_MODE=true
TARGET_IAM_USER=iam_username_to_offboard

# --- AWS SSO (comment out if not using) ---
SSO_MODE=false
# SSO_IDENTITY_STORE_ID=d-1234567890
# TARGET_SSO_USER_EMAIL=user@company.com

# --- Behaviour ---
DRY_RUN=false
GRACE_PERIOD_DAYS=7
